@model IEnumerable<PrimerParcial.Models.InvoiceMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="col-3">
                    <a asp-action="Create" class="btn btn-primary btn-block mb-4">
                        <i class="fa fa-plus"></i> Crear nueva factura
                    </a>
                </div>
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body collapse show" id="table1">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count() > 0)
                                    {
                                        foreach (var factura in Model.ToList())
                                        {
                                            <tr data-toggle="modal" data-target="#detallesModal" data-id="@factura.Id">
                                                <td>@factura.Id</td>
                                                <td>@factura.Cliente.Nombre</td>
                                                <td>@factura.FechaFactura</td>
                                                <td>
                                                    <a asp-action="PrintPdf" asp-route-id="@factura.Id"><i class="fa fa-print"></i></a> |
                                                    <a asp-action="Delete" asp-route-id="@factura.Id"> Eliminar </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7"> No se han encontrado facturas. </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->