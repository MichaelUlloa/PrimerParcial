@model PrimerParcial.Models.OrdenCompraMaster

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="col-1">
                    <a asp-action="Index" class="btn btn-primary btn-block mb-4"> Atrás </a>
                </div>

                <div class="card">
                    <div class="card-body collapse show" id="table1">
                        <h3> Orden maestra </h3>
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Suplidor</th>
                                    <th>Fecha del pedido</th>
                                    <th>Fecha de salida</th>
                                    <th>Fecha de llegada</th>
                                    <th>Forma de envio</th>
                                    <th>Forma de pago</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr data-id="@Model.Id">
                                    <td>@Model.Id</td>
                                    <td>@Model.Suplidor.Name</td>
                                    <td>@Model.FechaPedido</td>
                                    <td>@Model.FechaSalida</td>
                                    <td>@Model.FechaLlegada</td>
                                    <td>@Model.FormaEnvio.Descripcion</td>
                                    <td>@Model.FormaPago.Descripcion</td>
                                </tr>
                            </tbody>
                        </table>

                        <h3> Detalles </h3>

                        <table id="example2" class="table table-bordered table-hover mt-3">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Articulo</th>
                                    <th>Descripción</th>
                                    <th>Precio</th>
                                    <th>Subtotal</th>
                                    <th>Cantidad</th>
                                    <th>ITBIS</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.OrdenCompraDetalles.Count() > 0)
                                    {
                                        foreach (var detalle in Model.OrdenCompraDetalles)
                                        {
                                            <tr>
                                                <td>@detalle.Id</td>
                                                <td>@detalle.Articulo.Name</td>
                                                <td>@detalle.Descripcion</td>
                                                <td>@detalle.Precio</td>
                                                <td>@detalle.Subtotal</td>
                                                <td>@detalle.Cantidad</td>
                                                <td>@detalle.ITBIS</td>
                                                <td>@detalle.Total</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7"> No se han encontrado detalles en la orden de compra. </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->