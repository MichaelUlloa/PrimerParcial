@model IEnumerable<PrimerParcial.Models.OrdenCompraMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a asp-action="Create" class="btn btn-primary btn-block mb-4">
                    <i class="fa fa-plus"></i> Crear nueva orden
                </a>
                <div class="card">

                    <div class="col-2">
                        <button class="btn" type="button" data-toggle="collapse" aria-expanded="true" data-target="#table1">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                    <div class="card-header">
                        <h3 class="card-title"> Ordenes de Compra </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body collapse show" id="table1">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Suplidor</th>
                                    <th>Fecha del pedido</th>
                                    <th>Fecha de salida</th>
                                    <th>Fecha de llegada</th>
                                    <th>Forma de envio</th>
                                    <th>Forma de pago</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count() > 0)
                                    {
                                        foreach (var master in Model.ToList())
                                        {
                                            <tr data-toggle="modal" data-target="#detallesModal" data-id="@master.Id">
                                                <td>@master.Id</td>
                                                <td>@master.Suplidor.Name</td>
                                                <td>@master.FechaPedido</td>
                                                <td>@master.FechaSalida</td>
                                                <td>@master.FechaLlegada</td>
                                                <td>@master.FormaEnvio.Descripcion</td>
                                                <td>@master.FormaPago.Descripcion</td>
                                                <td>
                                                    @*<a asp-action="Edit" asp-route-id="@master.Id"> Editar </a> |*@
                                                    <a asp-action="Details" asp-route-id="@master.Id"> Detalles </a> |
                                                    <a asp-action="Delete" asp-route-id="@master.Id"> Eliminar </a> |
                                                    <a asp-action="PrintPdf" asp-route-id="@master.Id"><i class="fa fa-print"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7"> No se han encontrado ordenes de compra. </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->