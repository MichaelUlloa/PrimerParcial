@model PrimerParcial.ViewModels.OrdenCompraViewModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> Master </h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.Suplidor.Name"> Suplidor </label>
                        <select asp-for="OrdenCompraMasters.SuplidorId" class="form-control" asp-items="ViewBag.Suplidores"></select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.FechaPedido"></label>
                        <input asp-for="OrdenCompraMasters.FechaPedido" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.FechaSalida"></label>
                        <input asp-for="OrdenCompraMasters.FechaSalida" class="form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.FechaLlegada"></label>
                        <input asp-for="OrdenCompraMasters.FechaLlegada" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.FormaEnvio"> Forma de Envío </label>
                        <select asp-for="OrdenCompraMasters.FormaEnvioId" class="form-control" asp-items="ViewBag.FormasEnvio"></select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OrdenCompraMasters.FormaPago"> Forma de pago </label>
                        <select asp-for="OrdenCompraMasters.FormaPago" class="form-control" asp-items="ViewBag.FormasPago"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>